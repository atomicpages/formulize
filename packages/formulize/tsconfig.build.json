{
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "noImplicitThis": true,
    "emitDeclarationOnly": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "declarationDir": "dist/types",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src"]
}
